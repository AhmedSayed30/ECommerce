<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ECommerce" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorAccent">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue</item>

        <!-- System UI Configuration-->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="O_MR1">true</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Theme.ECommerce" parent="Base.Theme.ECommerce" />

    <style name="Theme.MainActivityTheme" parent="Base.Theme.ECommerce">
        <!-- System UI Configuration-->
        <item name="android:windowBackground">@drawable/launcher_background</item>
    </style>
    
    <style name="TitleTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>
    <style name="MassageTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>
<style name="EditTextStyle">
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">@color/black</item>
    <item name="hintTextColor">@color/gray</item>
    <item name="android:background">@drawable/edit_text_bg</item>
    <item name="android:paddingTop">10dp</item>
    <item name="android:paddingBottom">10dp</item>
    <item name="android:paddingStart">16dp</item>
    <item name="android:paddingEnd">16dp</item>
    <item name="android:drawablePadding">16dp</item>
    <item name="fontFamily">@font/poppins_regular</item>
</style>
    <style name="PrimaryButtonStyle">
        <item name="android:background">@drawable/primary_button_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>
    <style name="SocialButtonStyle">
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="MediumPrimaryTextViewStyle">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>